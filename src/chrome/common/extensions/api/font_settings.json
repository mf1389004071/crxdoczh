        "parameters": [
          {
            "name": "details",
            "type": "object",
            "optional": true,
//@            "description": "This parameter is currently unused.",
            "description": "该参数当前未使用。",
            "properties": {}
          },
          {
            "type": "function",
            "name": "callback",
            "optional": true,
            "parameters": []
          }
        ]
      },
      {
        "name": "getMinimumFontSize",
//@        "description": "Gets the minimum font size.",
        "description": "获取字体大小下限。",
        "parameters": [
          {
            "name": "details",
            "type": "object",
            "optional": true,
//@            "description": "This parameter is currently unused.",
            "description": "该参数当前未使用。",
            "properties": {}
          },
          {
            "name": "callback",
            "type": "function",
            "optional": true,
